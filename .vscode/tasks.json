{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "analysis.cc",
                "ast.cc",
                "lex.yy.cc",
                "parser.tab.cc",
                "-I/usr/lib/llvm-10/include",
                "-L/usr/lib/llvm-10/lib",
                "-lLLVM-10",
                "-std=c++2a",
                "-o",
                "./parser"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}